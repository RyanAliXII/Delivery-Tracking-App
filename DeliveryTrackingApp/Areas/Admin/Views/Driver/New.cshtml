@model DeliveryTrackingApp.Areas.Admin.Models.Driver;
<div class="p-5">
    <h3 class="h4">New Driver</h3>
    <hr class="divider-b mt-4">
    <form>
        <div class="text-gray-900 bg-gray-200 dark:text-white p-2 dark:bg-gray-800 rounded-md flex items-center gap-1 mb-4">
           <i class="fa-solid fa-address-card"></i>
            <span class="font-semibold font-xs">
            General Information</span>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
        <div >
            <label class="form-label">Given name</label>
            <input type="text" class="form-input"/>
        </div>
        <div >
            <label class="form-label">Middle name</label>
            <input type="text" class="form-input"/>
        </div >
        <div >
            <label class="form-label">Surname</label>
            <input type="text" class="form-input"/>
        </div>
        <div >
            <label class="form-label">Date of birth</label>
            <input type="date" class="form-input"></input>
        </div>
        <div>
            <label class="form-label">Gender</label>
            <select type="date" class="form-select">
                <option value="" disabled selected>Select a gender</option>
                <option value="Male">Male</option>
                <option value="Women">Women</option>
                <option value="Other">Other</option>
            </select>
        </div>
        </div>
         <div class="text-gray-900 bg-gray-200 dark:text-white p-2 dark:bg-gray-800 rounded-md flex items-center gap-1 mb-4 mt-4">
         <i class="fas fa-id-badge"></i>
            <span class="font-semibold font-xs">
            Driver's License</span>
        </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3  gap-2">
         <div>
            <label class="form-label">ID Number</label>
            <input type="email" class="form-input"></input>
        </div>
         <div>
            <label class="form-label">Validity</label>
            <input type="date" class="form-file-input"></input>
        </div>
        <div>
            <label class="form-label">License photo</label>
            <input type="file" class="form-file-input"></input>
        </div>
       
        </div>

         <div class="text-gray-900 bg-gray-200 dark:text-white p-2 dark:bg-gray-800 rounded-md flex items-center gap-1 mb-4 mt-4">
           <i class="fas fa-user-circle"></i>
            <span class="font-semibold font-xs">
            Account and Contact Information</span>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3  gap-2">
         <div>
            <label class="form-label">Email</label>
            <input type="email" class="form-input"></input>
        </div>
        <div>
            <label class="form-label">Contact number</label>
            <input type="number" class="form-input"></input>
        </div>
        </div>
        <button class="btn-primary mt-5" type="submit">
            <div>
                <i class="fas fa-save"> </i>
                Save
            </div>
        </button>
    </form>
</div>