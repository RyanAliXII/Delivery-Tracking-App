<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/flowbite/dist/flowbite.min.css" />
    <link rel="stylesheet" href="~/css/tailwind/output.css" asp-append-version="true" />
</head>
<body>
     @await Html.PartialAsync("_Navbar")
 <div class="flex pt-16 overflow-hidden bg-gray-50 dark:bg-gray-900">
  @await Html.PartialAsync("_Sidebar")
  <div id="main-content" class="relative w-full h-full overflow-y-auto bg-gray-50 lg:ml-64 dark:bg-gray-900 min-h-screen">
    <main>
      @RenderBody()
    </main>

  </div>

</div>

    
</body>
<script src="~/lib/flowbite/flowbite.min.js"></script>
<script src="~/js/dark-mode.js"> </script>
<script src="~/js/sidebar.js"> </script>
<script src="https://kit.fontawesome.com/e3d540c71b.js" crossorigin="anonymous"></script>
 @await RenderSectionAsync("Scripts", required: false)
</html>
